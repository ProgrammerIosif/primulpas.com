---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import ContactCards from "@components/sections/misc/ContactCards.astro";
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title="Contact | PrimulPas"
>
  <ContactSection />
  <ContactCards
    title="Have a Special Request? We're Here to Help!"
    cards={[
      {
        title: "Customer Support",
        text: "Need assistance? We are here to help with any questions or issues you may have.",
        svg: "customerSupport",
      },
      {
        title: "Project Inquiries",
        text: "Have a project in mind? Let's discuss your ideas and find the best solutions for your needs.",
        svg: "projectInquiries",
      },
      {
        title: "Technical Assistance",
        text: "Encountering technical difficulties? Reach out to us, and we'll get everything running smoothly.",
        svg: "technicalAssistance",
      },
      {
        title: "General Questions",
        text: "Have any other questions? Contact us without hesitation, and we'll promptly provide the answers you need.",
        svg: "generalQuestions",
      },
    ]}
  />
</MainLayout>
