---
import { Image } from "astro:assets";

type Props = {
  id: string;
  content: {
    title: string,
    text: string
  }
  image: any;
};
const { id, content, image} = Astro.props;
---

<div id={`featureCard${id}`}
class="flex flex-col justify-between h-full overflow-hidden rounded border border-neutral-500 bg-white text-neutral-500 shadow-lg shadow-neutral-700/5 dark:bg-neutral-900 dark:shadow-neutral-950/50"
>
  <div class="p-6">
    <h3 class="text-balance text-lg font-bold text-neutral-800 dark:text-neutral-200">{content.title}</h3>
    <p class="mt-2 text-pretty text-neutral-600 dark:text-neutral-400 md:mt-4">{content.text}</p>
  </div>
  <Image src={image} alt="" class="max-w-full h-auto" />
</div>
